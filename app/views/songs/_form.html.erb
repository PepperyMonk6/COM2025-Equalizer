<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2 class="text-white">
        <%= "#{pluralize(@song.errors.count, "error")} prohibited this song from being saved:" %>
      </h2>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li class="text-white">
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <label class="field_colors"><%= f.label :name %></label>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <label class="field_colors"><%= f.label :artist %></label>
    <%= f.text_field :artist %>
  </div>
  <div class="field">
    <label class="field_colors"><%= f.label :album %></label>
    <%= f.text_field :album %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
